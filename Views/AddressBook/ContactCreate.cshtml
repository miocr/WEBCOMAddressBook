@model AddressBook.Models.AddressBookViewModels.ContactViewModel

@{
    ViewData["Title"] = "Kotakt > Nový";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="btn btn-default">
    <a asp-action="Index">Zpět na seznam</a>
</div>

<hr />

<form asp-action="ContactCreate">
    <div class="form-horizontal">
        <h4>Kontaktní údaje</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ContactPerson.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactPerson.Name" class="form-control" />
                <span asp-validation-for="ContactPerson.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson.Surname" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactPerson.Surname" class="form-control" />
                <span asp-validation-for="ContactPerson.Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson.Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactPerson.Email" class="form-control" />
                <span asp-validation-for="ContactPerson.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson.Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactPerson.Phone" class="form-control" />
                <span asp-validation-for="ContactPerson.Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson.Birthdate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactPerson.Birthdate" class="form-control" />
                <span asp-validation-for="ContactPerson.Birthdate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactPerson.GenderType" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ContactPerson.GenderType" class="form-control"
                        asp-items="Html.GetEnumSelectList<ContactPerson.GenderEnum>()">
                    <option value="">-- Vyberte pohlaví --</option>
                </select>
                <span asp-validation-for="ContactPerson.GenderType" class="text-danger"></span>
            </div>
        </div>
        <h4>Výchozí adresa</h4>
        <hr />
        <div class="form-group">
            <label asp-for="ContactAddress.Street" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactAddress.Street" class="form-control" />
                <span asp-validation-for="ContactAddress.Street" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactAddress.City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactAddress.City" class="form-control" />
                <span asp-validation-for="ContactAddress.City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ContactAddress.ZipCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ContactAddress.ZipCode" class="form-control" />
                <span asp-validation-for="ContactAddress.ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Vytvořit" class="btn btn-default" />
            </div>
        </div>


    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
